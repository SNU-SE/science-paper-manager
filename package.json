{
  "name": "science-paper-manager",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:analyze": "ANALYZE=true npm run build",
    "build:standalone": "BUILD_STANDALONE=true npm run build",
    "start": "next start",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:integration:watch": "jest --config jest.integration.config.js --watch",
    "test:integration:coverage": "jest --config jest.integration.config.js --coverage",
    "test:performance": "jest --config jest.integration.config.js --testNamePattern='Performance Tests'",
    "test:system": "tsx scripts/run-integration-tests.ts",
    "test:system:parallel": "PARALLEL_TESTS=true tsx scripts/run-integration-tests.ts",
    "test:system:verbose": "VERBOSE=true tsx scripts/run-integration-tests.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:system": "playwright test e2e/system-enhancement.spec.ts",
    "test:all": "npm run test && npm run test:integration && npm run test:e2e",
    "test:all:system": "npm run test:system && npm run test:e2e:system",
    "test:integration:final": "jest --config jest.integration.config.js --testPathPattern='final-integration.test.ts'",
    "setup-db": "tsx scripts/setup-database.ts",
    "setup-db:optimized": "tsx scripts/setup-optimized-database.ts",
    "validate-db": "tsx -e \"import { validateDatabaseSetup } from './src/lib/database-validator'; validateDatabaseSetup().then(console.log)\"",
    "validate-db:schema": "tsx scripts/validate-database-schema.ts",
    "worker": "tsx scripts/worker.ts",
    "worker:dev": "tsx --watch scripts/worker.ts",
    "analyze": "ANALYZE=true next build",
    "analyze:dev": "ANALYZE=true next dev",
    "performance:test": "npm run build && npm run start & sleep 5 && npm run test:e2e -- --grep performance",
    "deploy:vercel": "vercel --prod",
    "deploy:preview": "vercel",
    "deploy:prod": "./scripts/deploy.sh",
    "setup:dev": "./scripts/setup-dev.sh",
    "health:check": "./scripts/health-check.sh",
    "monitor": "./scripts/monitor.sh",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build --no-cache",
    "validate:deployment": "tsx scripts/validate-deployment.ts",
    "validate:env": "tsx -e \"import { env } from './src/config/environment'; console.log('âœ… Environment validation passed')\"",
    "integration:verify": "tsx scripts/system-integration-verification.ts",
    "performance:optimize": "tsx scripts/performance-optimization.ts",
    "deployment:verify": "tsx scripts/production-deployment-verification.ts",
    "system:final-integration": "tsx scripts/final-system-integration.ts",
    "integration:simple": "tsx scripts/simple-integration-check.ts",
    "integration:summary": "tsx scripts/final-integration-summary.ts"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.17.0",
    "@langchain/community": "^0.3.53",
    "@langchain/core": "^0.3.72",
    "@langchain/openai": "^0.6.9",
    "@radix-ui/react-avatar": "^1.1.10",
